// Online C++ compiler to run C++ program online
#include <iostream>
#include <conio.h>
using namespace std;
struct Mini Soccer{

    char nama[50];
    int lamasewa;
    int totalbiaya;
    int biaya;
}sewa;

int main () {
    cout << "SEWA LAPANG MINI SOCCER" << endl;
    for (int i=1;i<3;i++){
        cout << "Masukan nama pemesan ke " << i << ":";
        cin >> sewa.nama;
        cout << "lama sewa (jam)    :" << endl;
        cin >> sewa.lamasewa;
        sewa.biaya = 300000;
        cout << "Biaya Sewa : " << sewa.biaya << endl;
        
        cout << "TAMPIL DATA " << endl;
        sewa.totalbiaya = sewa.lamasewa*sewa.biaya;
        cout << "Nama penyewa ke " <<i<<" : " << sewa.nama << endl;
        cout << "\nlama booking " << sewa.lamasewa;
        cout << "\nTotal biaya  : " << sewa.totalbiaya;
        getch ();
    }
}
